<% provide :title, 'Profile' %>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="content-box">

        <div class="trick-user">
          <div class="trick-user-image">
            <%# image_tag '#', class: 'user-avatar' %>
          </div>

          <div class="trick-user-data">
            <h1 class="page-title"><%= @user.username %></h1>
            <div class="text-muted"><b>Title:</b> <%= title_for(@user) %></div>
          </div>
        </div>

        <table>
            <tr>
                <th>Facebook:</th>
                <td><%= @user.facebook %></td>
            </tr>
            <tr>
                <th width="140">School:</th>
                <td><%= @user.school %></td>
            </tr>
        </table>

      </div>
    </div>
  </div>
</div>

<% provide :title, 'Profile' %>

<% cache @user do %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="content-box">

        <div class="trick-user">
          <div class="trick-user-image">
            <%= image_tag @user.avatar.url(:square), class: 'user-avatar' %>
          </div>

          <div class="trick-user-data">
            <h1 class="page-title"><%= @user.username %></h1>
            <div class="text-muted"><b>Title:</b> <%= title_for(@user) %></div>
          </div>
        </div>

        <table>
          <tr>
            <th>Facebook:</th>
            <td><%= link_to @user.facebook, "//#{@user.facebook}", target: '_blank' %></td>
          </tr>
          <tr>
            <th width="140">Trường:</th>
            <td><%= @user.school %></td>
          </tr>
        </table>

      </div>
    </div>
  </div>
</div>
<% end %>

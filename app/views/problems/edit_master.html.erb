<% provide :title, "#{@problem.title}: Settings" %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-push-3 col-md-8 col-md-push-2 col-sm-12 col-xs-12">
      <div class="content-box register-form">

        <h1 class="page-title">Master Settings</h1>
        <hr>

        <%= form_for @problem, url: update_problem_path(view: 'master'), html: { class: 'form-horizontal' } do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <div class="form-group">
            <%= f.label :title, 'Name', class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
            	<%= f.text_field :title, class: 'form-control', placeholder: 'Problem name' %>
          	</div>
          </div>

          <div class="form-group">
            <%= f.label :difficulty, 'Difficulty', class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
            	<%= f.select :difficulty, options_for_select(@difficulties, selected: @problem.difficulty), {}, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
          	<%= f.label :domain_id, 'Domain', class: 'control-label col-sm-2' %>
          	<div class="col-sm-10">
            	<%= f.collection_select :domain_id, @domains, :id, :name, {}, class: 'form-control' %>
            </div>
          </div>

					<hr>
					<div class="row">
            <div class="col-sm-4">
              <%= f.select :status, options_for_select(@statuses, selected: @problem.status), {}, class: 'form-control' %>
            </div>
            <div class="col-sm-4 col-sm-offset-4">
            	<%= link_to 'Cancel', problem_path(@problem), class: 'btn btn-danger' %>
              <%= f.submit 'Update', class: 'btn btn-success', data: { style: 'expand-right' } %>              
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
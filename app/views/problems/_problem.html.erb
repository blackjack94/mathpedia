<% cache problem do %>
<div class="trick-card col-lg-4 col-md-6 col-sm-6 col-xs-12">
	<div class="trick-card-inner">

		<%= link_to problem.title, problem_path(problem), class: 'trick-card-title' %>

		<div class="trick-card-stats trick-card-by">
			by <b><%= link_to problem.author.username, user_path(problem.author.username) %></b>
		</div>

		<div class="trick-card-stats clearfix">			
			<div class="trick-card-stat-block">
				<span class="fa fa-eye"></span> <%= problem.status %>
			</div>
			<div class="trick-card-stat-block text-center">				
			</div>
			<div class="trick-card-stat-block text-right">
				<span class="fa fa-users"></span> 12 good
			</div>
		</div>

		<div class="trick-card-tags clearfix">
			<div class="tag"><%= problem.domain.name %></div>
			<div class="tag"><%= problem.difficulty %></div>
		</div>

	</div>
</div>
<% end %>
